mixin slider-set(link, photoSrc, photoAlt, title)
	li.slider-block
		a(href=link target="blank")
			img.slider-block__image(src=photoSrc, alt=photoAlt)
			.slider-block__overlay
				h4.slider-block__title=title
				button.btn.slider-block__btn Показать


section.portfolio#portfolio
	.container.container--portfolio
		h3.title.block-history__title Мое портфолио
		ul.slider
			+slider-set("https://mandred19.github.io/RBNC/", "img/content/rnbc.jpg", "preview", "Российский центр деловых переговоров")
			+slider-set("https://mandred19.github.io/Yoga-tours/", "img/content/yoga.jpg", "preview", "Йога туры в Индию")
			+slider-set("https://mandred19.github.io/Pizza-at-home/", "img/content/pizza.jpg", "preview", "Пицца на дом")
			+slider-set("https://mandred19.github.io/Landing1/", "img/content/land.jpg", "preview", "Landing")
			+slider-set("https://mandred19.github.io/Money-keeper/", "img/content/budget.jpg", "preview", "Money keeper")
			+slider-set("https://mandred19.github.io/Mercury/", "img/content/merc.jpg", "preview", "Mercury")

		.slider-arrow
			+icon("next", "slider-arrow__prev")
			+icon("prev", "slider-arrow__next")