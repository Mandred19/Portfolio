mixin slider-set(link, photoSrc, photoAlt, title, btnName)
	.slider-block
		a(href=link target="blank")
			img.slider-block__image(src=photoSrc, alt=photoAlt)
			.slider-block__overlay
				h4.slider-block__title=title
				button.btn.slider-block__btn=btnName


section.portfolio#portfolio
	.container.container--portfolio
		h3.title.block-history__title My portfolio
		section.slider
			+slider-set("https://mandred19.github.io/RBNC/", "static/images/content/rnbc.jpg", "preview", "Russian Business Negotiation Center", "Show")
			+slider-set("https://mandred19.github.io/Yoga-tours/", "static/images/content/yoga.jpg", "preview", "Yoga tours to India", "Show")
			+slider-set("https://mandred19.github.io/Pizza-at-home/", "static/images/content/pizza.jpg", "preview", "Pizza at home", "Show")
			+slider-set("https://mandred19.github.io/Landing1/", "static/images/content/land.jpg", "preview", "Landing", "Show")
			+slider-set("https://mandred19.github.io/Money-keeper/", "static/images/content/budget.jpg", "preview", "Money keeper", "Show")
			+slider-set("https://mandred19.github.io/Mercury/", "static/images/content/merc.jpg", "preview", "Mercury", "Show")

		.slider-arrow
			+icon("next", "slider-arrow__prev")
			+icon("prev", "slider-arrow__next")